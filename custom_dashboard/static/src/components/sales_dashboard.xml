<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="custom_dashboard.SalesDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted p-3">
            <div class="row">
                <!-- Monthly Sales Section -->
                <div class="col-12 mb-3">
                    <div class="shadow-sm border p-4 bg-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <h1 class="text-primary fw-bold">Monthly Sales</h1>
                            <div>
                                <select name="" id="" class="form-select">
                                    <option value="0">Select Period</option>
                                    <option value="7">Last 7 Days</option>
                                    <option value="30">Last 30 Days</option>
                                    <option value="90">Last 90 Days</option>
                                    <option value="365">Last 365 Days</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- KPICards Row -->
                <div class="col-12 mb-3">
                    <div class="row">
                        <div class="col-3">
                            <KpiCard name="'Quotations'" value="'30.5K'" percentage="10"/>
                        </div>
                        <div class="col-3">
                            <KpiCard name="'Orders'" value="'20.5K'" percentage="20"/>
                        </div>
                        <div class="col-3">
                            <KpiCard name="'Revenues'" value="'10.4K'" percentage="-4"/>
                        </div>
                        <div class="col-3">
                            <KpiCard name="'Average Order'" value="'15.2K'" percentage="40"/>
                        </div>
                    </div>
                </div>

                <!-- Top Products and Top Sales People Section -->
                <div class="col-lg-6 mb-3">
                    <div class="shadow-sm border p-4 bg-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <h1 class="text-primary fw-bold">Top Products</h1>
                            <div class="px-3 py-1 bg-primary cursor-pointer">
                                <span class="fa fa-arrow-right text-white"/>
                            </div>
                        </div>
                        <canvas t-ref="chart-top-products"/>
                    </div>
                </div>
                <div class="col-lg-6 mb-3">
                    <div class="shadow-sm border p-4 bg-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <h1 class="text-primary fw-bold">Top Sales People</h1>
                            <div class="px-3 py-1 bg-primary cursor-pointer">
                                <span class="fa fa-arrow-right text-white"/>
                            </div>
                        </div>
                        <canvas t-ref="chart-top-sales"/>
                    </div>
                </div>


                <!-- Additional Charts Section -->
                <div class="col-12 mb-3">
                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 1</h1>
                                <canvas t-ref="chart-1"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 2</h1>
                                <canvas t-ref="chart-2"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 3</h1>
                                <canvas t-ref="chart-3"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 4</h1>
                                <canvas t-ref="chart-4"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 5</h1>
                                <canvas t-ref="chart-5"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 6</h1>
                                <canvas t-ref="chart-6"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 7</h1>
                                <canvas t-ref="chart-7"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-3">
                            <div class="shadow-sm border p-4 bg-white">
                                <h1 class="text-primary fw-bold">Chart 8</h1>
                                <canvas t-ref="chart-8"></canvas>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </t>
</templates>
